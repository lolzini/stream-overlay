---
import { FaTiktok } from "react-icons/fa6";
---

<span class="relative w-10">
  <FaTiktok id="pink" className="absolute fill-[#ff0050]" />
  <FaTiktok id="aqua" className="absolute fill-[#00f2ea]" />
  <FaTiktok id="white" className="custom-shadow absolute" />
</span>
<style>
  #pink {
    top: 0;
    left: 0;
    animation: pink 10s linear infinite;
  }
  #aqua {
    top: 0;
    left: 0;
    animation: aqua 10s linear infinite;
  }
  #white {
    top: 0;
    left: 0;
    animation: white 10s linear infinite;
  }

  @keyframes aqua {
    0% {
      transform: translate(0, 0);
    }
    80% {
      transform: translate(0, 0);
    }
    90% {
      transform: translate(-4px, -4px);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  @keyframes pink {
    0% {
      transform: translate(0, 0);
    }
    80% {
      transform: translate(0, 0);
    }
    90% {
      transform: translate(4px, 4px);
    }
    100% {
      transform: translate(0, 0);
    }
  }

  @keyframes white {
    0% {
      transform: scale(1);
    }
    80% {
      transform: scale(1);
    }
    90% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }
</style>
