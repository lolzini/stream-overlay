---
import Layout from "@components/layout.astro";
import Main from "@components/main.astro";
---

<Layout>
  <Main>
    <div class="container">
      <p class="text-9xl">Redes: iniz.lol</p>
      <p class="text-9xl">Blog: quieroserweb.dev</p>
    </div>
  </Main>
</Layout>
<style>
  .container {
    position: absolute;
    font-family: "Caveat Brush";
    color: #eeeeee;
    animation: slide-in 24s alternate;
    bottom: 1rem;
    text-align: right;
    opacity: 0;
  }

  p {
    --shadow-color: #eeeeee;
    --shadow-width: 0.4rem;
    color: #1a1a1a;
    filter: drop-shadow(var(--shadow-width) 0 0 var(--shadow-color))
      drop-shadow(calc(-1 * var(--shadow-width)) 0 0 var(--shadow-color))
      drop-shadow(0 var(--shadow-width) 0 var(--shadow-color))
      drop-shadow(0 calc(-1 * var(--shadow-width)) 0 var(--shadow-color));
  }

  @keyframes slide-in {
    0% {
      right: -100%;
      opacity: 0;
    }
    5% {
      right: 1rem;
      opacity: 1;
    }
    95% {
      right: 1rem;
      opacity: 1;
    }
    100% {
      right: -100%;
      opacity: 0;
    }
  }
</style>
